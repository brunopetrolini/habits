{
  "name": "node-app-template",
  "version": "0.0.2",
  "description": "Template for node applications with typescript and jest",
  "main": "./dist/main/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollumtechnology/node-app-template.git"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf ./dist",
    "build": "npm run prebuild && npx tsc -p ./tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register ./src/main/main.ts",
    "start:dev": "ts-node-dev -r tsconfig-paths/register ./src/main/main.ts",
    "start:prod": "node ./dist/main/main.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:staged": "npm run test --findRelatedTests"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.7.4"
  },
  "keywords": [
    "node",
    "typescript",
    "jest",
    "template"
  ],
  "author": "Bruno Petrolini <bruno@apollum.org>",
  "license": "GNU",
  "bugs": {
    "url": "https://github.com/apollumtechnology/node-app-template/issues"
  },
  "homepage": "https://github.com/apollumtechnology/node-app-template#readme"
}