{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@main/*": ["./src/main/*"],
      "@test/*": ["./test/*"]
    }
  }
}
